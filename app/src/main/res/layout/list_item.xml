<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="255dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Everyday" />

        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:text="09 jan 2019" />

        <LinearLayout
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="90dp"
                android:layout_height="25dp">
                <TextView
                    android:id="@+id/tv_quan_minus"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="15dp"
                    android:layout_width="30dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/tv_quan"
                    android:background="#000000"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:text="5"
                    android:layout_width="30dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/tv_quan_plus"
                    android:gravity="center"
                    android:text="+"
                    android:layout_width="30dp"
                    android:layout_height="25dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:src="@drawable/bott" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camel Milk " />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ML" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Rs" />

        </LinearLayout>

           </LinearLayout>
    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#8e8e8f" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:rotation="90"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_remove"
            android:text="Remove"
            android:layout_width="175dp"
            android:layout_height="25dp" />
        <TextView
            android:id="@+id/tv_tprice"
            android:textColor="#02c8de"
            android:gravity="center"
            android:text="@string/rupess"
            android:layout_width="175dp"
            android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>